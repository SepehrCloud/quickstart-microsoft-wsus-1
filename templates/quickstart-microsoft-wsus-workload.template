                    "Parameters": [
                        "KeyPairName",
                        "PrivateSubnet1ID",
                        "PrivateSubnet2ID",
                        "PublicSubnet1ID",
                        "PublicSubnet2ID",
                        "VPCID",
                        "VPCCIDR"
                    ]
                },
                {
                    "Label": {
